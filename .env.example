# Frontend Environment Variables

# Choose your RAG service (set only one to 'true')
VITE_USE_HYBRID=true
VITE_USE_HUGGING_FACE=false
VITE_USE_BACKEND=false

# DeepSeek API Key (required for Hybrid, Backend, and Netlify modes)
VITE_DEEPSEEK_API_KEY=your_deepseek_api_key_here

# Backend URL (only needed if VITE_USE_BACKEND=true)
VITE_BACKEND_URL=http://localhost:3001

# Hugging Face Space URL (automatically configured for hybrid mode)
# VITE_HUGGING_FACE_SPACE_URL=https://raktimhugging-ragtim-bot.hf.space

